<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#04245A" />
            <gradient android:angle="-90" android:startColor="#74B1F1" android:endColor="#74B1F1"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#9F9E9E" />
            <solid android:color="#9F9E9E"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#9F9E9E" />
            <gradient android:angle="-90" android:startColor="#04245A" android:endColor="#2C7798" />
        </shape>
    </item>
</selector>