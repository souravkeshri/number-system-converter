<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#403C3C"
    tools:context=".BinaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/linearTextViews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/textViewMode"
                android:layout_width="302dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="20"
                android:background="@drawable/helpbtn"
                android:gravity="center"
                android:shadowColor="#050505"
                android:text="Binary mode"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewQuestion"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="15"
                android:background="#171616"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:textColor="#858181"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewBinary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="18"
                android:background="@drawable/textview_style"
                android:gravity="right|center_vertical"
                android:hint="0"
                android:paddingRight="5dp"
                android:textColor="#000000"
                android:textColorHint="#737070"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="15"
                android:background="@drawable/textview_style"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="Decimal :                      "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewOctal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="15"
                android:background="@drawable/textview_style"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="Octal :                      "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewHexaDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="15"
                android:background="@drawable/textview_style"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="HexaDecimal :                      "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonrow0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="12"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonhome"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:drawableStart="@drawable/abc_vector_test"
                android:drawableLeft="@drawable/abc_vector_test"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:onClick="home"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:textColor="#FD0157"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonA"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"

                android:text="A"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonB"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"

                android:text="B"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonC"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"

                android:text="C"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonD"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"

                android:text="D"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonE"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"

                android:text="E"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonF"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"

                android:text="F"
                android:textColor="#000000"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonrow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="12"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"

                android:text="7"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="8"

                android:textSize="36sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="9"

                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonMultiplication"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:gravity="center"
                android:onClick="numberPressed"
                android:text="*"
                android:textColor="#4CAF50"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonrow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"
            android:layout_weight="12"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="4"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="5"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="6"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonplus"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:onClick="numberPressed"
                android:text="+"
                android:textColor="#4CAF50"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonrow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"

            android:layout_weight="12"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:onClick="numberPressed"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="60dp"
                android:layout_height="match_parent"

                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="2"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="3"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonminus"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:onClick="numberPressed"
                android:text="-"
                android:textColor="#4CAF50"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonrow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="12"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:onClick="clearBtn"
                android:text="C"
                android:textColor="#F44336"
                android:textSize="36sp" />


            <Button
                android:id="@+id/button0"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:onClick="numberPressed"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonback"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:onClick="trim"
                android:text="DEL"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="34sp" />

            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/equalbtn"
                android:onClick="result"
                android:text="="
                android:textColor="#F8F8F8"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>